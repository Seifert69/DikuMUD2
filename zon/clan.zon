	home : unitptr;
	result : integer;
	data : string;
	object : unitptr;
	countstring : string;
	count : integer;
	arg : string;
	action : string;
	room : unitptr;
    clanextra : extraptr;
code{
	heartbeat:=5*PULSE_SEC;

:start:
