	else if(action=="info"){
		block;
		object:=clan_get_object@clans("data");
        clanextra:=arg in object.extra;
        if(clanextra.names.[CLAN_O_VERSION_INDEX]!=CLAN_O_CURRENT_VERSION){
            sendtext("Incorrect data version.&n", pc);
