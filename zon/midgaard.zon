	{
	  exec("say You can't afford to renew for a year.", self);
	  goto start;
	}
	goto year;
      }
      goto choice;
/* --------------------------------------------------
   END MODIFICATIONS
-------------------------------------------------- */
      :day:
      cont := findunit(self, cont_name, 0, pc.inside);
      sendto("add day", cont);
      goto end;

      :week:
