        {
         pause;
         exec("sigh",self);pause;
         exec("say Thank Thee nontheless, "+pro+", I will keep looking."
         ,self);
         unsecure(pc);
         goto start;
        }
      if(command(CMD_NOD)or(command(CMD_SAY)and("yes" in argument)))
