 {
  secure(pc,lost);
  block;
  act("East  - The Haven of Malice",A_ALWAYS, pc, null, null,TO_CHAR);
  act("North - The Chicken's Rest",A_ALWAYS, pc, null, null,TO_CHAR);
  act("South - Inner Sanctum",A_ALWAYS, pc, null, null,TO_CHAR);
  unsecure(pc);
  goto start;
 }
 if (command("directions"))
 {
  secure(pc,lost);
  block;
  act("East  - The Haven of Malice",A_ALWAYS, pc, null, null,TO_CHAR);
  act("North - The Chicken's Rest",A_ALWAYS, pc, null, null,TO_CHAR);
  act("South - Inner Sanctum",A_ALWAYS, pc, null, null,TO_CHAR);
  unsecure(pc);
  goto start;
 }

 if (command("doors")) 
 {
  secure(pc,lost);
  block;
  act("East  - The Haven of Malice",A_ALWAYS, pc, null, null,TO_CHAR);
  act("North - The Chicken's Rest",A_ALWAYS, pc, null, null,TO_CHAR);
