          exec("say Use this manacle well, and you shall be safe.",self);
          pause;
          exec("thank "+pc.name, self);
          pause;
          exec("say Good luck adventurer.",self);
          pause;
          exec("wave "+pc.name, self);
       }
    }

    unsecure(pc);
    goto init;

  :lost_pc:
    unsecure(pc);
    exec("say Meddlesome little coward.",self);
    pause;
    exec("shrug",self);
    goto start;

}
dilend
end





