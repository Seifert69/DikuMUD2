#define STATE_OPEN   0
#define STATE_CLOSED 1
dilbegin integer isopen( times : stringlist );
var
 time1 : integer;
 time2 : integer;
code
{
    if( length( times ) < 2 )
     return(STATE_OPEN);

    time1 := atoi( times.[0] );
    time2 := atoi( times.[1] );

    if( time1 == time2 )
     return(STATE_OPEN);

    if( time1 < time2 )
     if( ( mudhour >= time2 ) or ( mudhour < time1 ) )
      return(STATE_CLOSED);

    if( time1 > time2 )
     if( ( mudhour >= time2 ) and ( mudhour < time1 ) )
      return(STATE_CLOSED);

    return(STATE_OPEN);
}
dilend
