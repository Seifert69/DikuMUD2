     secure( owner, gone );
     heartbeat:= PULSE_SEC*5;
   :loop:
     wait( SFB_TICK, TRUE );
     if( owner == self.outside ) goto loop;

   :gone:
     subextra( self.extra, "$price" );
     quit;
}
